<%= form_tag "/admin/categories/save", :method => "POST", :id => 'admin_item_add_edit_form' do %>
    <p class="admin-error-box">Please fill in all fields</p>
    <input type="hidden" name="add_new" value="<%= add_new %>" />
    <input type="hidden" name="id" value="<%= id  %>" />
    <div class="wl-field">
        <label for="category_title">Category Name</label>
        <input type="text" id="category_title" name="category_title" value="<%= category.title if category %>"  />
    </div>
    <div class="wl-field">
        <label for="category_code">URL</label>
        <input type="text" id="category_url" name="category_url" value="<%= category.url_title if category %>" />
    </div>
    <button class="wl-button wl-overlay-button" type="submit"><% if add_new == true %>Add Category<% else %>Save Changes<% end %></button>
    <% if add_new != true %>
        <a class="wl-bold wl-regular-link" href="/admin/categories">Cancel</a>
    <% end %>
<% end %>